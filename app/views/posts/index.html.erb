<h1>Posts</h1>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>ID</th>
      <th>Date</th>
      <th>Relation</th>
      <th>User</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.id %></td>
        <td><%= post.date.strftime("%d.%m.%Y") %></td>
        <td><%= post.rationale.truncate(40) %> </td>
        <td><%= post.user.try(:full_name) %></td>
      </tr>
    <% end  %>
  </tbody>
</table>

<%= will_paginate @posts, renderer: BootstrapPagination::Rails %>
